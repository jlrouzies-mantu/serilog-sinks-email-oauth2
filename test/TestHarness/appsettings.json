{
  "Serilog": {
    "Using": [ "Serilog.Sinks.Email" ],
    "MinimumLevel": {
      "Default": "Verbose",
      "Override": {
        "Microsoft": "Error",
      }
    },
    "WriteTo": [
      {
        "Name": "Email",
        "Args": {
          "subject": "[{Leve}] Subject",
          "isBodyHtml": true,
          "restrictedToMinimumLevel": "Information",
          "body": "<html><b>bold</b> not</html>",
          "from": "",
          "to": "" ,
          "host": "smtp.office365.com",
          "port": 587,
          "connectionSecurity": "StartTls",
          "smtpAuthenticationMode": "OAuth2",
          "applicationId": "",
          "secretWindowsStoreCertificateThumbprint": "",
          "oAuthTokenUrl": "",
          "oAuthScope": "",
          "oAuthTokenUsername": ""
        }
      }
    ]
  }
}
